@page
@model LoginModel

@{
    // login proyecto grupo
    ViewData["Title"] = "Inicio de Sesión";
    Layout = "_LoginLayout";
}


<div class="row flex-grow">
    <div class="col-lg-6 d-flex align-items-center justify-content-center">
        <div class="auth-form-transparent text-left p-3">
            <div class="brand-logo">
                <h1>@ViewData["Title"]</h1>
            </div>
            <h4>Bienvenido a Abarrotes S.A</h4>
            <h6 class="fw-light">Encantado de tenerte de vuelta!</h6>
            <form id="account" method="post" class="pt-3">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label for="exampleInputEmail">Email</label>
                    <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                            <span class="input-group-text bg-transparent border-right-0">
                                <i class="ti-user text-primary"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control form-control-lg border-left-0" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        @* <label asp-for="Input.Email" class="form-label">Email</label>*@
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputEmail">Contraseña</label>
                    <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                            <span class="input-group-text bg-transparent border-right-0">
                                <i class="ti-lock text-primary"></i>
                            </span>
                        </div>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        @* <label asp-for="Input.Password" class="form-label">Contraseña</label> *@
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
         

                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <label class="form-check-label text-muted" asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                            <i class="input-helper"></i>
                        </label>
                    </div>
                    <a id="forgot-password" class="auth-link text-muted" asp-page="./ForgotPassword">Olvido su contraseña?</a>
                </div>

                <div class="my-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesión</button>
                </div>

                <div>
                    @* <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvido su contraseña?</a>
                    </p> *@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar nuevo usuario</a>
                    </p>
                    @* <p>
                        <a class="auth-link text-muted" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Ingresar email de confirmación</a>
                    </p> *@
                </div>
            </form>
        </div>
 
    </div>
    <div class="col-lg-6 login-half-bg d-flex flex-row">
        <p class="text-white font-weight-medium text-center flex-grow align-self-end">
            .:Abarrotes S.A:.
        </p>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
