@model Laboratorio1AdmonTIC.Models.Ventas

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Ventas</h4>
        <div class="row">
            <div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">

                        <div class="form-group col-md-4">
                            <label asp-for="ClienteId" class="control-label"></label>
                            @* <input asp-for="ClienteId" class="form-control" /> *@
                            <select style="height: 50px;" asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes"></select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="EmpleadosId" class="control-label"></label>
                            @* <select asp-for="EmpleadosId" class="form-control" asp-items="ViewBag.EmpleadosId"></select> *@
                            <select style="height: 50px;" asp-for="EmpleadosId" class="form-control" asp-items="ViewBag.Empleados"></select>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="MetodoId" class="control-label"></label>
                            @* <input asp-for="MetodoId" class="form-control" /> *@
                            <select style="height: 50px;" asp-for="MetodoId" class="form-control" asp-items="ViewBag.MetodoPago"></select>
                            <span asp-validation-for="MetodoId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="FechaVenta" class="control-label"></label>
                            <input asp-for="FechaVenta" class="form-control" />
                            <span asp-validation-for="FechaVenta" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Total" class="control-label"></label>
                            <input type="number" asp-for="Total" class="form-control" />
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-inverse-success btn-fw me-2" />
                        <a class="btn btn-inverse-secondary btn-fw" type="button" asp-action="Index">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
