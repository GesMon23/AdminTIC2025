@model Laboratorio1AdmonTIC.ViewModels.VentaViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Ventas</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VentasId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VentasId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Empleado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Empleado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoPago)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoPago)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaVenta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaVenta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Total)
            </dd>
        </dl>
        <div>
            <a class="btn btn-inverse-info btn-fw me-2" asp-action="Edit" asp-route-id="@Model?.VentasId">Editar</a>
            <a class="btn btn-inverse-secondary btn-fw" asp-action="Index">Regresar</a>
        </div>
    </div>
</div>
