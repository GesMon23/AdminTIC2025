@model Laboratorio1AdmonTIC.Models.TiposMovimiento

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Tipos de Movimientos</h4>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TipoMovimiento" class="control-label"></label>
                        <input asp-for="TipoMovimiento" class="form-control" />
                        <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-inverse-success btn-fw me-2" />
                        <a class="btn btn-inverse-secondary btn-fw" type="button" asp-action="Index">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
