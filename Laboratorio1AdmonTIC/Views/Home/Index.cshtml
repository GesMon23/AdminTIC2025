@using System.Globalization
@model Laboratorio1AdmonTIC.ViewModels.DashboardViewModel

@{
    var cultura = new CultureInfo("es-ES");
    var fechaFormateada = DateTime.Now.ToString("D", cultura);
    var contador = 1;
}
@{
    ViewData["Title"] = "Home Page";
}

<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<meta http-equiv="pragma" content="no-cache">

<div class="text-left">
    <h4>
        Bienvenido, @User.Identity.Name<h4>
            <h4>
                Tienda: _.:Abarrotes S.A:._<h4>
                    <h4>Fecha: @fechaFormateada<h4>
</div>
@* Carousel *@
<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sobre Nosotros</h4>
                <div class="owl-carousel owl-theme lazy-load">
                    <div class="item">
                        <img src="~/images/carousel/tienda3.jpg" alt="image" />
                    </div>
                    <div class="item">
                        <img src="~/images/carousel/tienda1.jpg" alt="image" />
                    </div>
                    <div class="item">
                        <img src="~/images/carousel/tienda2.jpg" alt="image" />
                    </div>
                    <div class="item">
                        <img src="~/images/carousel/tienda5.jpg" alt="image" />
                    </div>
                    <div class="item">
                        <img src="~/images/carousel/tienda4.jpg" alt="image" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Resumen</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tarjeta</th>
                                <th>Contenido</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Ventas del día</td>
                                <td class="text-success">Q @Model.TotalVentasHoy<i class="ti-arrow-up"></i></td>
                                <td><label class="badge badge-success">@DateTime.Now.ToString("yyyy-MM-dd")</label></td>
                            </tr>
                            <tr>
                                <td>Compras del día</td>
                                <td class="text-success">Q @Model.TotalComprasHoy<i class="ti-arrow-up"></i></td>
                                <td><label class="badge badge-success">@DateTime.Now.ToString("yyyy-MM-dd")</label></td>
                            </tr>
                            <tr>
                                <td>Productos en Stock</td>
                                <td class="text-success">@Model.TotalStockDisponible</td>
                                <td><label class="badge badge-success">@DateTime.Now.ToString("yyyy-MM-dd")</label></td>
                            </tr>
                            <tr>
                                <td>Alertas Activos</td>
                                <td class="text-danger">@Model.TotalStockAgotado</td>
                                <td><label class="badge badge-danger">Productos sin stock</label></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @* productos con stock minimo *@
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Productos bajos de stock</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Stock Actual</th>
                                <th>Stock Mínimo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.ProductosStockMinimo)
                            {
                                <tr>
                                    <td>@p.Nombre</td>
                                    <td class="text-danger">@p.Stock</td>
                                    <td><label class="badge badge-warning">@p.StockMinimo</label></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    @* ultimos movimientos *@
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ultimos Movimientos</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Tipo
                                </th>
                                <th>
                                    Fecha y Hora
                                </th>
                                <th>
                                    Total
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.MovimientosRecientes)
                            {
                                <tr>
                                    <td>@contador</td>
                                    <td>@m.TipoMovimiento</td>
                                    <td>@m.Fecha.ToString("g")</td>
                                    <td>Q @m.Total.ToString("F2")</td>
                                </tr>
                                contador++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>