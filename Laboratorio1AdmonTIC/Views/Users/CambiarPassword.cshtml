@model Laboratorio1AdmonTIC.ViewModels.CambiarPasswordViewModel

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CambiarPassword" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Usuario</label>
        <input class="form-control" value="@Model.UserName"/>
    </div>

    <div class="form-group">
        <label asp-for="NuevaPassword"></label>
        <input asp-for="NuevaPassword" class="form-control" type="password" />
        <span asp-validation-for="NuevaPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmarPassword"></label>
        <input asp-for="ConfirmarPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
