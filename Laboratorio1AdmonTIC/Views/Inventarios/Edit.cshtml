@model Laboratorio1AdmonTIC.Models.Inventario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editando</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Inventario</h4>
        <hr />
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MovimientoId" />
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="ProductoId" class="control-label"></label>
                        <select style="height: 50px;" asp-for="ProductoId" class="form-control" asp-items="ViewBag.Producto"></select>
                        <span asp-validation-for="ProductoId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="TipoMovimientoId" class="control-label"></label>
                        <select style="height: 50px;" asp-for="TipoMovimientoId" class="form-control" asp-items="ViewBag.TipoMovimiento"></select>
                        <span asp-validation-for="TipoMovimientoId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="EmpleadosId" class="control-label"></label>
                        <select style="height: 50px;" asp-for="EmpleadosId" class="form-control" asp-items="ViewBag.Empleados"></select>
                        <span asp-validation-for="EmpleadosId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="FechaCompra" class="control-label"></label>
                        <input asp-for="FechaCompra" class="form-control" />
                        <span asp-validation-for="FechaCompra" class="text-danger"></span>
                    </div>
                </div>
                
                
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-inverse-success btn-fw me-2" />
                    <a class="btn btn-inverse-secondary btn-fw" asp-action="Index">Regresar</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
